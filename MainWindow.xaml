<Window x:Class="SnakeGameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:SnakeGameWPF.MVVM.ViewModel"
        xmlns:local="clr-namespace:SnakeGameWPF"
        mc:Ignorable="d"
        Title="Snake!" Height="500" Width="500"
        KeyDown="UserControl_KeyDown">
    <Grid>
        <ContentControl Content="{Binding CurrentView}" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
